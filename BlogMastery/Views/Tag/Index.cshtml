@model IEnumerable<BlogMastery.Models.Tag>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" type="text/css" href="~/CSS/Deletet.css" />
</head>
<body>
    <nav >
        <a href="/Post/Index">Blog Index</a>
        <a href="/Tag/Index">Tag Index</a>
        <a href="/Genre/Index">Genre Index</a>
    </nav>
    <h1>Tags</h1>
    <div>

        <section id="Tag">
            @foreach (var tag in Model)
            {

                <article>
                    <p class="one"><a href="/Post/Details/@tag.Id">@tag.Name</a></p>
                </article>
            }
        </section>
        <p class="one"><a href="/Home/Index/">Return Home</a></p>


    </div>

    <nav>
        <a href="/Home/Index">Home</a>
        <a href="/Post/Index">Blog Index</a>
        <a href="/Tag/Index">Tag Index</a>
        <a href="/Genre/Index">Genre Index</a>
    </nav>

</body>
</html>