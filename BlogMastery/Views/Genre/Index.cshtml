@model IEnumerable<BlogMastery.Models.Genre>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

</head>
<body>
    <h1>Genres</h1>
    <div>

        <section >
            @foreach (var genre in Model)
            {

                <article>
                    <p><a href="/Post/Details">@genre.Name</a></p>
                </article>
            }
        </section>


    </div>
    <nav>
        <a href="/Post/Index">Blog Index</a>
        <a href="/Tag/Index">Tag Index</a>
        <a href="/Genre/Index">Genre Index</a>
    </nav>
</body>
</html>
